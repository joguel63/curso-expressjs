generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  password     String
  role         Role          @default(USER)
  appointments Appointment[]
}

model Appointment {
  id          Int       @id @default(autoincrement())
  date        DateTime
  userId      Int
  timeBlockId Int
  timeBlock   TimeBlock @relation(fields: [timeBlockId], references: [id])
  user        User      @relation(fields: [userId], references: [id])
}

model TimeBlock {
  id           Int           @id @default(autoincrement())
  startTime    DateTime
  endTime      DateTime
  appointments Appointment[]
}

enum Role {
  ADMIN
  USER
}
